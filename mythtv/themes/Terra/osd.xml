<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE mythuitheme SYSTEM "../mythuitheme.dtd">
<mythuitheme>

    <window name="program_info">
        <area>0,480,1280,253</area>

        <imagetype name="background">
            <area>0,0,1280,253</area>
            <filename>osd/infobackground.png</filename>
        </imagetype>

        <textarea name="heading">
            <area>20,11,830,38</area>
            <font>baselargebrown</font>
            <value>Info</value>
        </textarea>

        <textarea name="title">
            <area>150,55,830,38</area>
            <font>baseextralarge</font>
        </textarea>

        <textarea name="description">
            <area>150,105,1100,120</area>
            <multiline>yes</multiline>
            <font>basesmall</font>
            <template>%|"SUBTITLE|"% %DESCRIPTION%</template>
        </textarea>

        <textarea name="lentime">
            <area>990,65,250,30</area>
            <font>basesmall</font>
            <align>right</align>
        </textarea>

        <textarea name="channum">
            <area>15,95,120,30</area>
            <font>baseextralarge</font>
            <align>hcenter</align>
            <value>%CHANNUM%</value>
        </textarea>

        <imagetype name="iconpath">
            <area>15,65,120,90</area>
        </imagetype>

        <clock name="time">
            <area>15,177,120,35</area>
            <font>basemedium</font>
            <align>hcenter</align>
            <template>%TIME%</template>
        </clock>
    </window>

    <window name="browse_info">
        <area>0,480,1280,253</area>

        <imagetype name="background">
            <area>0,0,1280,253</area>
            <filename>osd/infobackground.png</filename>
        </imagetype>

        <textarea name="heading">
            <area>20,11,830,38</area>
            <font>baselargebrown</font>
            <value>Browse</value>
        </textarea>

        <textarea name="title">
            <area>150,55,830,38</area>
            <font>baseextralarge</font>
        </textarea>

        <textarea name="description">
            <area>150,105,1100,120</area>
            <multiline>yes</multiline>
            <font>basesmall</font>
            <template>%|"SUBTITLE|"% %DESCRIPTION%</template>
        </textarea>

        <textarea name="lentime">
            <area>990,65,250,30</area>
            <font>basesmall</font>
            <align>right</align>
        </textarea>

        <textarea name="channum">
            <area>15,95,120,30</area>
            <font>baseextralarge</font>
            <align>hcenter</align>
            <value>%CHANNUM%</value>
        </textarea>

        <imagetype name="iconpath">
            <area>15,65,120,90</area>
        </imagetype>

        <clock name="time">
            <area>15,177,120,35</area>
            <font>basemedium</font>
            <align>hcenter</align>
            <template>%TIME%</template>
        </clock>

    </window>

    <window name="osd_status">
        <area>-1,580,619,92</area>

        <imagetype name="backimg">
            <area>0,0,619,92</area>
            <filename>popups/progress_dialog_background.png</filename>
        </imagetype>

        <textarea name="title" from="basetextarea">
            <area>20,5,210,55</area>
            <font>basemediumbrown</font>
            <multiline>true</multiline>
            <align>vcenter</align>
        </textarea>

        <textarea name="extdescription" from="basetextarea">
            <area>240,5,350,55</area>
            <multiline>true</multiline>
            <align>allcenter</align>
        </textarea>

        <progressbar name="position" from="baseprogressbar">
            <position>45,62</position>
        </progressbar>

    </window>

    <window name="osd_program_editor">
        <fontdef name="small" face="DejaVu Sans">
            <pixelsize>22</pixelsize>
            <color>#FFFFFF</color>
            <shadowoffset>1,1</shadowoffset>
            <shadowcolor>#000000</shadowcolor>
        </fontdef>
        <area>100,580,1080,90</area>
        <shape name="background">
            <area>0,0,100%,100%</area>
            <type>roundbox</type>
            <fill color="#000000" alpha="200" />
            <line color="#222222" alpha="255" width="2" />
            <cornerradius>12</cornerradius>
        </shape>
        <textarea name="title">
            <area>10,10,600,30</area>
            <align>left,top</align>
            <font>small</font>
        </textarea>
        <textarea name="seekamount" from="title">
            <area>770,10,300,30</area>
            <align>right,top</align>
        </textarea>
        <textarea name="timedisplay" from="title">
            <area>10,50,1060,30</area>
            <align>hcenter,bottom</align>
        </textarea>
        <textarea name="cutindicator" from="title">
            <area>10,50,300,30</area>
            <align>left,bottom</align>
        </textarea>
        <textarea name="framedisplay" from="title">
            <area>770,50,300,30</area>
            <align>right,bottom</align>
        </textarea>
        <editbar name="editbar">
            <area>10,30,1060,30</area>
            <shape name="position">
                <area>0,0,8,100%</area>
                <fill color="#FFFFFF" alpha="255" />
            </shape>
            <shape name="keep">
                <area>0,11,100%,8</area>
                <fill color="#00FF00" alpha="255" />
                <type>roundbox</type>
                <cornerradius>6</cornerradius>
            </shape>
            <shape name="cut">
                <area>0,11,100%,8</area>
                <fill color="#FF0000" alpha="255" />
                <type>roundbox</type>
                <cornerradius>6</cornerradius>
            </shape>
            <shape name="cuttoright">
                <area>0,5,4,20</area>
                <fill color="#FF0000" alpha="255" />
            </shape>
            <shape name="cuttoleft">
                <area>0,5,4,20</area>
                <fill color="#FF0000" alpha="255" />
            </shape>
            <shape name="keeptoright">
                <area>0,5,4,20</area>
                <fill color="#00FF00" alpha="255" />
            </shape>
            <shape name="keeptoleft">
                <area>0,5,4,20</area>
                <fill color="#00FF00" alpha="255" />
            </shape>
        </editbar>
    </window>

    <window name="MythPopupBox">
        <area>0,42,412,642</area>

        <imagetype name="backimg">
            <area>0,78,412,515</area>
            <filename>popups/menu_background.png</filename>
        </imagetype>

        <textarea name="messagearea">
            <area>12,93,378,125</area>
            <multiline>yes</multiline>
            <align>allcenter</align>
            <font>basesmall</font>
        </textarea>

        <buttonlist name="list">
            <area>15,238,378,350</area>
            <buttonarea>0,0,378,350</buttonarea>
            <spacing>3</spacing>
            <wrapstyle>selection</wrapstyle>
            <statetype name="buttonitem">
                <area>0,0,367,53</area>
                <state name="active">
                    <area>0,0,367,53</area>
                    <imagetype name="buttonbackground">
                        <area>0,0,367,53</area>
                        <filename>popups/menu_button.png</filename>
                    </imagetype>
                    <textarea name="buttontext">
                        <area>18,0,324,50</area>
                        <align>allcenter</align>
                        <font>basemedium</font>
                    </textarea>
                    <imagetype name="buttonarrow">
                        <area>346,16,10,19</area>
                        <filename>popups/submenu_arrow.png</filename>
                    </imagetype>
                </state>
                <state name="selectedinactive" from="active">
                </state>
                <state name="selectedactive" from="active">
                    <imagetype name="selecteditemarrow">
                        <area>5,16,10,19</area>
                        <filename>popups/selected_item_arrow.png</filename>
                    </imagetype>
                    <textarea name="buttontext">
                        <font>basemediumbrown</font>
                    </textarea>
                </state>
            </statetype>
        </buttonlist>
    </window>

</mythuitheme>
